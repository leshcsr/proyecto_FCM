<!--Header-->
<%- include('partials/header') %>
<!--Header-->

<div class="container mt-4"> <!--Contendor Principal-->

  <h1>¡Bienvenidx, <%= user.nombre %>!</h1>

  <div class="container mt-4"> 
    <!-- Frase motivacional -->
    <div class="card shadow-sm p-4 text-center my-4">
        <h4 id="quote-text"><%= quote.q %></h4>
        <p class="text-muted">- <%= quote.a %></p>
    </div>

    <!-- Sección de Cumpleaños -->
    <!-- Cumpleaños del Mes -->
    <h2 class="mt-5">🎂 Cumpleaños del mes</h2>
    <div class="row">
        <% birthdays.forEach(user => { %>
            <div class="col-md-4">
                <div class="card shadow-sm p-3 my-3">
                    <h5 class="card-title"><%= user.nombre %></h5>
                    <p class="text-muted">🏠 Casa: <%= user.casa %></p>
                </div>
            </div>
        <% }) %>
    </div>
</div>
    

</div> <!--Fin Contendor Principal-->


        

<!--Footer-->
<%- include('partials/footer') %>
<!--Footer-->

<script>
    document.addEventListener("DOMContentLoaded", async function () {
        try {
            const response = await fetch("https://zenquotes.io/api/random");
            const data = await response.json();
            document.getElementById("quote-text").innerText = data[0].q;
        } catch (error) {
            console.error("Error al cargar la frase:", error);
        }
    });
    </script>
    